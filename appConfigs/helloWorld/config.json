{
  "id": "helloWorld",
  "common": {
    "id": "reactnativevanilla.helloworld",
    "title": "RNV Hello World",
    "description": "Cross-platform application project based on React Native Vanilla",
    "author": {
      "name": "Pavel Jacko",
      "email": "Pavel Jacko <i@pavjacko.com>",
      "url": "https://github.com/pavjacko"
    },
    "license": "MIT"
  },
  "platforms":{
    "ios": {
      "entryFile": "index.ios",
      "scheme": "RNVApp",
      "runScheme": "Debug",
      "platformTemplate": "./rnv/platformTemplates/ios",
      "permissions": [
        {
          "key": "NSAppleMusicUsageDescription",
          "desc": "Get favorite music"
        }, {
          "key": "NSBluetoothPeripheralUsageDescription",
          "desc": "Allow you to use your bluetooth to play music"
        }, {
          "key": "NSCalendarsUsageDescription",
          "desc": "Calendar for add events"
        }, {
          "key": "NSCameraUsageDescription",
          "desc": "Need camera to scan QR Codes"
        }, {
          "key": "NSLocationWhenInUseUsageDescription",
          "desc": "Geolocation tags for photos"
        }, {
          "key": "NSMicrophoneUsageDescription",
          "desc": "Need microphone for videos"
        }, {
          "key": "NSMotionUsageDescription",
          "desc": "To know when device is moving"
        }, {
          "key": "NSPhotoLibraryAddUsageDescription",
          "desc": "Need library to save images"
        }, {
          "key": "NSPhotoLibraryUsageDescription",
          "desc": "Allows to upload images from photo library"
        }, {
          "key": "NSSpeechRecognitionUsageDescription",
          "desc": "Speech Recognition to run in app commands"
        }
      ]
    },
    "tvos": {
      "entryFile": "index.tvos",
      "scheme": "RNVAppTVOS",
      "runScheme": "Debug"
    },
    "android": {
      "entryFile": "index.android",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.SYSTEM_ALERT_WINDOW"
      ]
    },
    "androidtv": {
      "entryFile": "index.androidtv",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.SYSTEM_ALERT_WINDOW"
      ]
    },
    "androidwear": {
      "entryFile": "index.androidwear",
      "permissions": [
        "android.permission.WAKE_LOCK",
        "android.permission.INTERNET",
        "android.permission.SYSTEM_ALERT_WINDOW"
      ]
    },
    "macos": {
      "entryFile": "index.macos"
    },
    "tizen": {
      "appName": "RNVanillaTV",
      "package": "NcVRhWHJST",
      "id": "NcVRhWHJST.RNVanillaTV",
      "entryFile": "index.tizen",
      "certificateProfile": "RNVanillaCert"
    },
    "tizenwatch": {
      "appName": "RNVanillaWatch",
      "package": "cHIP2fIRQZ",
      "id": "cHIP2fIRQZ.RNVanillaWatch",
      "entryFile": "index.tizenwatch",
      "certificateProfile": "RNVanillaCert"
    },
    "web": {
      "entryFile": "index.web"
    },
    "webos": {
      "entryFile": "index.webos"
    },
    "windows": {
      "entryFile": "index.windows"
    },
    "kaios": {
      "entryFile": "index.kaios"
    }
  },
  "plugins": {

  }
}
